{% setcontent top_articles = 'articles' where { places: 'top' } limit 3 %}
<div class="pure-g-r">
    {% for article in top_articles %}
        <div class="pure-u-1-3">
            <section class="fpoverview topoverview" class="l-left">
                {% if article.image!="" %}
                    <a href="{{ article.link }}" title="{{ article.title }}">
                        <img src="{{ image(article.image) }}" alt="{{ article.title }}"/>
                    </a>
                {% endif %}
                <h3 class="l-centered">{{ article.title }}</h3>
                <p>{{ letterexcerpt(article.body|raw|striptags, '100', article.link) }}</p>  
            </section>
        </div>
    {% endfor %}
</div>